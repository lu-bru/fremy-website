<header>
	<nav>
		<a href="/"><img class="logo" src="/img/logo.svg" alt="Fremy Dulcería logo"></a>
		<div class="navbar">
			<ul class="navbar-links">
				<li class="navlink">
					<a href="/locales">Locales</a>
				</li>
				<li class="navlink">
					<a class="active" href="/tienda">Tienda Online</a>
				</li>
				<li class="navlink">
					<a href="/faq">Preguntas Frecuentes</a>
				</li>
			</ul>
			{{#if isLogged}}
			{{#if isUser}}
			<div class="nav-buttons">
				<a href="/perfil" class="btn btn-orange">Perfil</a>
				<a href="/carrito" class="btn btn-blue">Carrito</a>
			</div>
			{{/if}}
			{{#if isAdmin}}
			<div class="nav-buttons">
				<a href="/perfil" class="btn btn-orange">Perfil</a>
				<a href="/admin" class="btn btn-blue">Admin</a>
			</div>
			{{/if}}
			{{else}}
			<div class="nav-buttons">
				<a href="/login" class="btn btn-orange">Ingresar</a>
				<a href="/registro" class="btn btn-blue">Registrarme</a>
			</div>
			{{/if}}
		</div>

		<div class="burger">
			<div class="burger-ani line1"></div>
			<div class="burger-ani line2"></div>
			<div class="burger-ani line3"></div>
		</div>
	</nav>
</header>
<main>
	<article>
		<div class="breadcrumbs container">
			<ul>
				<li>
					<a href="/tienda">Tienda Online</a>
					<span>/</span>
				</li>
				{{#each data}}
				<li>
					<a href="/tienda/{{categoria}}">{{categoria}}</a>
					<span>/</span>
				</li>
				<li>
					<strong>{{nombre}}</strong>
				</li>
				{{/each}}
			</ul>
		</div>
		{{#each data}}
		<div class="product">
			<div class="product-img-container">
				<img class="product-img" src="/img/{{img}}" alt="{{nombre}}">
			</div>
			<div class="product-description">
				<h1>{{nombre}}</h1>
				<h2>${{precio}}</h2>
				<p class="product-description-text">{{descripcion}}</p>
                <p class="ingredientes">Ingredientes: {{ingredientes}}</p>
                <form action="#" method="post">
                	<div class="carrito-cantidad">
		                <label for="cantidad">Cantidad:</label>
						<input class="input-cantidad" type="number" name="cantidad" min="1" max="12">
					</div>
					<input class="btn-agregar-carrito" type="submit" value="Agregar al carrito">
				</form>
			</div>
		</div>
		{{/each}}
	</article>
	<article>
		<h2 class="title-pink">Te pueden interesar</h2>
		<div class="container product-card-grid product-card-grid-v2 padding-bottom-8">
			{{#each data2}}
			<div class="product-card">
					<img class="product-card-img" src="/img/{{img}}" alt="{{nombre}}">
				<div class="product-card-info product-card-info-v2">
					<h4>{{nombre}}</h4>
					<p>${{precio}}</p>
					<a href="/tienda/{{categoria}}/{{id}}" class="vermas">Ver más</a>
				</div>
			</div>
			{{/each}}
		</div>
	</article>
</main>
<footer>
	<p class="footer-text">Fremy Dulcería 2019. Diseño por <a href="https://github.com/lu-bru">lu-bru.</a></p>
</footer>
	