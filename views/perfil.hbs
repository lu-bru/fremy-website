<header>
	<nav>
		<a href="/"><img class="logo" src="/img/logo.svg" alt="Fremy Dulcería logo"></a>
		<div class="navbar">
			<ul class="navbar-links">
				<li class="navlink">
					<a href="locales">Locales</a>
				</li>
				<li class="navlink">
					<a href="tienda">Tienda Online</a>
				</li>
				<li class="navlink">
					<a href="faq">Preguntas Frecuentes</a>
				</li>
			</ul>
			{{#if isLogged}}
			{{#if isUser}}
			<div class="nav-buttons">
				<a href="/perfil" class="btn btn-orange">Perfil</a>
				<a href="/carrito" class="btn btn-blue">Carrito</a>
			</div>
			{{/if}}
			{{#if isAdmin}}
			<div class="nav-buttons">
				<a href="/perfil" class="btn btn-orange">Perfil</a>
				<a href="/admin" class="btn btn-blue">Admin</a>
			</div>
			{{/if}}
			{{else}}
			<div class="nav-buttons">
				<a href="/login" class="btn btn-orange">Ingresar</a>
				<a href="/registro" class="btn btn-blue">Registrarme</a>
			</div>
			{{/if}}
		</div>
		<div class="burger">
			<div class="burger-ani line1"></div>
			<div class="burger-ani line2"></div>
			<div class="burger-ani line3"></div>
		</div>
	</nav>
</header>
<main>
	<article>
		<h2 class="title-pink">Mi perfil</h2>
		<div class="perfil">
			<form class="perfil-form" action="/perfil" method="post">
				{{#each data}}
				<div class="perfil-categoria">
					<label for="nombre">
						<h4>Nombre</h4>						 
					</label>
					<img class="edit-perfil-icon" src="/img/edit.svg" alt="Edit icon">
				</div>
				<input class="perfil-input edit-input-hidden" type="text" name="nombre" value="{{nombre}}" required>
				<h3 class="perfil-current-data">{{nombre}}</h3>
				<div class="perfil-categoria">
					<label for="apellido">
						<h4>Apellido</h4>
					</label>
				</div>
				<input class="perfil-input edit-input-hidden" type="text" name="apellido" value="{{apellido}}" required>
				<h3 class="perfil-current-data">{{apellido}}</h3>
				<div class="perfil-categoria">
					<label for="mail">
						<h4>E-mail</h4>
					</label>
				</div>
				<input class="perfil-input edit-input-hidden" type="E-mail" name="mail" value="{{mail}}" required>
				<h3 class="perfil-current-data">{{mail}}</h3>
				<div class="perfil-categoria">
					<label for="newpassword">
						<h4>Nueva contraseña</h4>
					</label>
				</div>
				<input class="perfil-input" type="password" name="newpassword" value="{{password}}" required>
				<div class="perfil-categoria">
					<label for="confirmpassword">
						<h4>Confirmar nueva contraseña</h4>
					</label>
				</div>
				<input class="perfil-input" type="password" name="confirmpassword" value="{{password}}" required>
				{{/each}}
				<p>{{message}}</p>
				<div class="perfil-buttons">
					<a href="logout" class="btn-leave">Cerrar sesión</a>
					<input type="submit" value="Guardar cambios">
				</div>
			</form>
		</div>
	</article>
</main>
<footer>
	<p class="footer-text">Fremy Dulcería 2019. Diseño por <a href="https://github.com/lu-bru">lu-bru.</a></p>
</footer>